<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 顶部带圆角 白色背景 灰色边框  长方体 -->
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape>
                    <solid android:color="@color/glay_btn_pic_select" />

                    <corners android:radius="5dp" />

                    <stroke
                        android:width="0dp"
                        android:color="@color/glay_btn_pic_select" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/glay_btn_pic_select" />

                    <corners android:radius="5dp" />

                    <stroke
                        android:width="0dp"
                        android:color="@color/glay_btn_pic_select" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>