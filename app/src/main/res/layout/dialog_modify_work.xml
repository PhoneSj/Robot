<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="298dp"
        android:layout_height="356dp"
        android:background="@drawable/cornor_big"
        android:paddingTop="46dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_homework_content"
           style="@style/text_match_13sp_color666"
            android:text=""
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"/>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:paddingBottom="20dp"
             >

             <Button
                 android:id="@+id/btn_cancel"
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                 android:layout_weight="1"
                 android:background="@drawable/select_orange_btn"
                 android:textColor="@drawable/selector_text_orange"
                 android:textSize="14sp"
                 android:text="取消"
                 />

             <Button
                 android:id="@+id/btn_complete"
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                 android:layout_weight="1"
                 android:background="@drawable/select_white_btn"
                 android:textColor="@drawable/selectort_text_white"
                 android:textSize="14sp"
                 android:text="确认完成"
                 android:layout_marginLeft="12dp"
                 />


         </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/finish_tips_pic"/>


    </RelativeLayout>

</LinearLayout>